def solve(s):
  result=s.split()
  list1=[]
  separator =" "
  for word in result:
    if word and word.isalpha: 
          
       list1.append(word.capitalize())
    else :
          list1.append(word) 
  result_string = separator.join(list1)
  return result_string
        

if __name__ == '__main__':
    fptr = open(os.environ['OUTPUT_PATH'], 'w')

    s = input()

    result = solve(s)

    fptr.write(result + '\n')

    fptr.close()
